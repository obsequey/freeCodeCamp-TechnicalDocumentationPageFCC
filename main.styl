mainfont = 'Open Sans', sans-serif

*
  margin 0
  padding 0
  box-sizing border-box
  text-decoration none
  color black
html
  font-family mainfont
  font-size 14px
a
  background-color black
  color white
  transition all .1s ease-in-out
  &:hover
    background-color white
    color black
.left
  height 100%
  @media (min-width 822px)
    float left
    width 33%
    position fixed
    border-right 1px solid
  &__heading
    font-weight bold
    font-size 2rem
    text-align center
    padding 1rem
  &__nav
    border 1px solid
    height 15rem
    overflow auto
    @media (min-width 822px)
      height 25rem
      overflow auto
      border none
    &__list
      &__item
        &__link
          padding 1rem
          transition all .1s ease-in-out
          &:hover
            background-color black
            color white
          &::before
            content 
.right
  padding 0 1rem
  @media (min-width 822px)
    float right
    width 66%
  &__section
    margin 2rem 0
    @media (min-width 822px)
      &:first-child
        margin 0 0 2rem 0
    &__header
      font-size 1.5rem
      font-weight bold
      text-align left
      margin 1.5rem 0
    &__text
      line-height 2rem
      p
        margin 1rem 0
      li
        margin 1rem 0 1rem 1rem
      code
        padding 1rem
        display block
        white-space pre
        overflow auto
        background-color #f7f9f9
        border-radius 3px